---
import projects from '../../config/projects.json'
---
<h1 class="text-5xl my-5 text-center font-bold ">Projects</h1>
    {
    projects.map((project) => (
        <div class="flex flex-col md:flex-row bg-slate-500 rounded-xl my-4 ">
            <div class=" flex-1  p-10 m-auto text-center md:text-left">
                <h2 class="text-2xl font-bold">{project.title}</h2>
                <p class="my-2">{project.description}</p>
                <button class="bg-indigo-500 p-2 hover:bg-indigo-400">Más Información</button>
            </div>
            <div class="flex-1">
                <img class="w-72 m-auto" src={project.image} alt="">
            </div>
        </div> ))
        }
    
